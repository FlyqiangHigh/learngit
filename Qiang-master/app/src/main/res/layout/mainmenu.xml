<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.qiangge.selfview.CircleImageView
        android:id="@+id/menu_portrait"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y50"
        android:src="@drawable/jietouxiang"
        android:layout_marginLeft="@dimen/x25"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_toRightOf="@id/menu_portrait"
        >
        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="强哥"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:textColor="@color/orderOperationActivity_textColor"
            android:textSize="17sp"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_name"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/y20"
                    android:src="@drawable/sun"
                    android:layout_marginLeft="@dimen/x12"
                    />
            </LinearLayout>
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:src="@drawable/code"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginRight="@dimen/x10"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_portrait"
        android:text="17764591420"
        android:singleLine="true"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/x25"
        android:textColor="@color/white"
        />
</RelativeLayout>

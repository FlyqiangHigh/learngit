<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"

    >
    <TextView
        android:id="@+id/outchat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:21"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/outchat_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/outchat_time"
        >
    <com.example.qiangge.selfview.CircleImageView
        android:id="@+id/outchat_iv"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:src="@drawable/jie"
        android:layout_marginLeft="@dimen/x10"
        />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/outchat_picture"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_marginLeft="@dimen/x5"
            android:visibility="gone"

            />
        <!--<ImageView
            android:id="@+id/outchat_picture"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:src="@drawable/jie"
            android:layout_marginLeft="@dimen/x5"
            android:visibility="gone" />-->
    <TextView
        android:id="@+id/outchat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming"
        android:text="儿童劫"
        android:layout_marginLeft="@dimen/x5"
        android:maxWidth="@dimen/x200"
        />
        <!--<ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outchat_progress"
            android:layout_toLeftOf="@id/inchat_tv"
            android:layout_centerVertical="true"
            style="@android:style/Widget.ProgressBar.Small"
           android:layout_marginLeft="@dimen/x5"

            />-->
    </LinearLayout>

</RelativeLayout>
